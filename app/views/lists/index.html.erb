<h1>My lists of movies</h1>
<div class="cards">
  <% @lists.each do |list| %>
  <% if list.photo.attached? %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
  <%= link_to list.name, list_path(list) %>
  </div>
<% else %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path('ryhep3lpfygdbdadrqc3.jpg', crop: :fill) %>' )">
    <%= link_to list.name, list_path(list) %>
  </div>
<% end %>
  <% end %>
</div>

<%= link_to "+ Add a list", new_list_path, class: "btn btn-light" %>
